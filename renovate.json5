{
  // Common Settings
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)"
  ],
  // 設定内で利用できるテンプレート関数的なものを定義している
  // https://renovatebot.com/docs/config-presets/#preset-parameters
  // システム向けのテンプレート関数
  // ":templateSetSystem(システム名)"
  "default": {
    "setsystem": {
      "description": "For System <code>{{arg0}}</code>",
      "labels": [
        "System:{{arg0}}"
      ],
      "minor": {
        "groupName": "System:{{arg0}} dependencies"
      },
    },
  },
  // npm向けの設定
  "npm": {
    "extends": [
      // https://renovatebot.com/docs/presets-default/#nounscheduledupdates
      ":noUnscheduledUpdates",
      // fix: とかのコミットメッセージのprefixをつけてくれる
      // https://renovatebot.com/docs/presets-default/#semanticprefixfixdepschoreothers
      ":semanticPrefixFixDepsChoreOthers",
      // patchもPRを分ける
      // https://renovatebot.com/docs/presets-default/#separatepatchreleases
      // ":separatePatchReleases",
      // publishされてから24時間経ってから更新を行う(npmは一定時間内ならパッケージを削除できるため)
      // https://renovatebot.com/docs/presets-default/#unpublishsafe
      ":unpublishSafe",
      // Branchでテストが通ってからPull Requestを作る
      // Pull Requestが出てからテストが終わるまで待つのを防ぐ
      // https://renovatebot.com/docs/presets-default/#prnotpending
      ":prNotPending",
    ],
    // https://dependabot.com の Compatibility Scoreを追加する
    // アップデートでPRが通った率を表示できる
    "prBodyDefinitions": {
      "CompatibilityScore": "[![compatibility-score for {{{depNameEscaped}}}](https://api.dependabot.com/badges/compatibility_score?dependency-name={{{depNameEscaped}}}&package-manager=npm_and_yarn&previous-version={{{fromVersion}}}&new-version={{{toVersion}}})](https://dependabot.com/compatibility-score/?dependency-name={{{depNameEscaped}}}&package-manager=npm_and_yarn&previous-version={{{fromVersion}}}&new-version={{{toVersion}}})"
    },
    "prBodyColumns": [
      "Package",
      "Update",
      "Type",
      "Change",
      "CompatibilityScore"
    ],
    // バージョンをpinで固定する
    // 例) "1.0.0"
    // https://renovatebot.com/docs/configuration-options/#rangestrategy
    "rangeStrategy": "pin",
    // パッケージ名ごとの特別ルール
    "packageRules": [
      {
        // ソースコードも一緒に更新が必要になるパッケージ
        "groupName": "Manuall updates",
        "packageNames": [
          "eslint",
          "prettier",
          "typescript"
        ],
        "enabled": false
      }
    ],
    // 脆弱性アラート関係
    "vulnerabilityAlerts": {
      "schedule": ["at any time"]
    }
  },
  // For Test
  "ignorePresets": [":prHourlyLimit2"],
  // System Settings
  "packageRules": [
    {
      "paths": [
        "systems/one/**"
      ],
      "extends": [
        ":setsystem(one1)"
      ]
    },
    {
      "paths": [
        "systems/two/**"
      ],
      "extends": [
        ":setsystem(two2)"
      ]
    }
  ]
}